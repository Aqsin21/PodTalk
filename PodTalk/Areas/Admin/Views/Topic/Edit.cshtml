@model PodTalk.Areas.Admin.Data.TopicEditViewModel


<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistingImageUrl" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EpisodeCount" class="form-label"></label>
        <input asp-for="EpisodeCount" class="form-control" type="number" />
        <span asp-validation-for="EpisodeCount" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Current Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
        {
            <img src="~/images/@Model.ExistingImageUrl" width="150" />
        }
        else
        {
            <p>No image uploaded.</p>
        }
    </div>

    <div class="mb-3">
        <label asp-for="NewImageFile" class="form-label">Upload New Image</label>
        <input asp-for="NewImageFile" class="form-control" type="file" />
        <span asp-validation-for="NewImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
