@model PodTalk.DataContext.Entities.Episode

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@Model.Title</h3>
            <span class="badge bg-secondary">Duration: @Model.Duration mins</span>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <img src="~/images/@Model.CoverImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" />
                </div>
                <div class="col-md-8">
                    <p><strong>Description:</strong></p>
                    <p>@Model.Description</p>

                    <p><strong>Topic:</strong> @Model.Topic?.Name</p>
                    <p><strong>Speaker:</strong> @Model.Speaker?.UserName</p>

                    <div class="mt-3">
                        <audio controls class="w-100">
                            <source src="~/audios/@Model.AudioUrl" type="audio/mpeg" />
                            Your browser does not support the audio element.
                        </audio>
                    </div>
                </div>
            </div>

            <hr />

            <div class="row text-center">
                <div class="col-md-3">
                    <span class="text-success fw-bold">👍 Likes:</span> @Model.LikeCount
                </div>
                <div class="col-md-3">
                    <span class="text-primary fw-bold">💬 Comments:</span> @Model.CommentCount
                </div>
                <div class="col-md-3">
                    <span class="text-info fw-bold">▶️ Plays:</span> @Model.PlayCount
                </div>
                <div class="col-md-3">
                    <span class="text-warning fw-bold">⬇️ Downloads:</span> @Model.DownloadCount
                </div>
            </div>

            <div class="mt-4">
                <a asp-controller="Episode" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>