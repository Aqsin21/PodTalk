
<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Speaker</h4>

        <a asp-area="Admin" asp-controller="Topic" asp-action="Create" class="btn btn-success mb-3">

            Create New Episode
        </a>

        <div class="card">
            <h5 class="card-header">Speakers CRUD</h5>
            <div class="table-responsive text-nowrap">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Episode Name</th>
                            <th>Update</th>
                            <th>Read</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Speaker" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">

                                        Update
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="Admin"
                                       asp-controller="Speaker"
                                       asp-action="Details"
                                       asp-route-id="@item.Id"
                                       class="btn btn-warning btn-sm">
                                        Read
                                    </a>
                                </td>
                                <td>
                                    <a asp-area="Admin" asp-controller="Speaker" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>