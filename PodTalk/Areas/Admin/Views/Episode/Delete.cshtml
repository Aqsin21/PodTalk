@model PodTalk.DataContext.Entities.Episode

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3>Are you sure you want to delete this episode?</h3>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4">
                    <img src="~/images/@Model.CoverImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" />
                </div>
                <div class="col-md-8">
                    <p><strong>Title:</strong> @Model.Title</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Duration:</strong> @Model.Duration mins</p>
                    <p><strong>Topic:</strong> @Model.Topic?.Name</p>
                    <p><strong>Speaker:</strong> @Model.Speaker?.UserName</p>

                    <div class="mt-3">
                        <audio controls class="w-100">
                            <source src="~/audios/@Model.AudioUrl" type="audio/mpeg" />
                            Your browser does not support the audio element.
                        </audio>
                    </div>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-danger">Yes, Delete it</button>
                </div>
            </form>
        </div>
    </div>
</div>