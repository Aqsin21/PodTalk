@model PodTalk.Areas.Admin.Data.EpisodeEditViewModel

@{
    ViewData["Title"] = "Edit Episode";
}

<h2 class="mb-4">Edit Episode</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="w-100" style="max-width:600px;">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ExistingCoverImageUrl" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Duration" class="form-label"></label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TopicId" class="form-label">Topic ID</label>
        <input asp-for="TopicId" class="form-control" placeholder="Enter Topic ID" />
        <span asp-validation-for="TopicId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SpeakerId" class="form-label">Speaker ID</label>
        <input asp-for="SpeakerId" class="form-control" placeholder="Enter Speaker ID" />
        <span asp-validation-for="SpeakerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Current Cover Image:</label><br />
        @if (!string.IsNullOrEmpty(Model.ExistingCoverImageUrl))
        {
            <img src="~/images/@Model.ExistingCoverImageUrl" width="150" class="rounded shadow-sm" />
        }
        else
        {
            <p class="text-muted">No image uploaded.</p>
        }
    </div>

    <div class="mb-3">
        <label asp-for="NewCoverImageUrl" class="form-label">Upload New Cover Image</label>
        <input asp-for="NewCoverImageUrl" type="file" class="form-control" />
        <span asp-validation-for="NewCoverImageUrl" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}